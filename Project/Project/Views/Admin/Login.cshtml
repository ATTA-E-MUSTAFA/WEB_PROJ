@model Project.Models.Entities.Admin

@{
    ViewData["Title"] = "LoginAdmin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background-color: #333;
            padding: 20px;
            color: #FAF3E0;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            margin: 0; /* Remove margin */
            transition: all 0.3s ease; /* Smooth transition for hover effects */
            position: relative; /* Make sure cards are positioned relative to their default position */
            z-index: 0; /* Default z-index */
        }

            .form-label,
            .card h2,
            .text-center p {
                color: #fff;
            }

        .btn-primary {
            background-color: #f00;
            border: none;
        }

            .btn-primary:hover {
                background-color: #c00;
            }

        .form-control {
            background-color: #444;
            border: 1px solid #555;
            color: #fff;
        }

            .form-control:focus {
                background-color: #555;
                color: #fff;
                border-color: #777;
            }

        a {
            color: #f00;
        }

            a:hover {
                color: #c00;
            }

        .btn:disabled {
            background-color: #555;
            border-color: #555;
            cursor: not-allowed;
        }

        .attached-card {
            display: flex;
            border-radius: 0; /* Ensure no rounded corners on the sides where cards are attached */
        }

            .attached-card .card:hover {
                z-index: 10; /* Bring the hovered card to the front */
                transform: scale(1.05); /* Slightly enlarge the hovered card */
                box-shadow: 0 0 15px rgba(255, 0, 0, 0.5); /* Separate hover effect */
            }

        .image-card img {
            max-width: 100%;
            border-radius: 8px 0 0 8px; /* Rounded corners only on the left side */
            object-fit: cover;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="attached-card">
                    <!-- Image Card -->
                    <div class="col-md-6 card image-card p-0">
                        <img src="~/images/beauty2.jpg" alt="FashionFusion">
                    </div>

                    <!-- Login Card -->
                    <div class="col-md-6 card">
                        <h2 class="text-center mb-4">Login to FashionFusion</h2>
                        <form id="loginForm" action="/Admin/Login" method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                            </div>
                            <button type="submit" id="loginButton" class="btn btn-primary w-100" disabled>Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
       
    </script>
</body>
</html>
