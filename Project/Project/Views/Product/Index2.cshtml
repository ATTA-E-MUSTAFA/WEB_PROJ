@{
    ViewData["Title"] = "Products For Buyer";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        /* Search Section Styles */
        .search-section {
            background-color: #333;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(255, 0, 0, 0.2);
            margin-bottom: 2rem;
        }

            .search-section input {
                border-radius: 5px;
                border: 1px solid #555;
            }

        #searchButton {
            border-radius: 5px;
            border: none;
            background-color: #ff5722;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            #searchButton:hover {
                background-color: #e64a19;
            }

        .card {
            background-color: rgba(34, 34, 34, 0.9);
            border: none;
            color: white;
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            z-index: 1;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 20px rgba(255, 255, 255, 0.3);
            }

            .card::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                background: radial-gradient(circle, rgba(255, 255, 255, 0.6) 0%, transparent 70%);
                border-radius: 50%;
                opacity: 0;
                transition: opacity 0.3s ease, width 0.3s ease, height 0.3s ease;
                pointer-events: none;
                transform: translate(-50%, -50%);
                z-index: -1;
            }

            .card:hover::after {
                opacity: 1;
                width: 200%;
                height: 200%;
            }

        .btn-info {
            background-color: #ff5722;
            border: none;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-info:hover {
                background-color: #e64a19;
            }

        /* Section Title */
        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            color: #ff5722;
        }

        /* Back Button */
        .btn-back {
            background-color: #6c757d;
            color: #fff;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-back:hover {
                background-color: #5a6268;
            }
    </style>
</head>

<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">We have Quality Products</h1>
        </div>
    </header>

    <!-- Search Section -->
    <section class="py-3">
        <div class="container">
            <div class="search-section">
                <input type="text" id="searchTerm" class="form-control mb-2" placeholder="Search products..." />
                <button id="searchButton" class="btn btn-primary w-100">Search</button>
            </div>
            <!-- Back to User Page Button -->
            <div class="text-center mt-4">
                <a href="/User/Index" class="btn btn-back">Back to User Page</a>
            </div>
        </div>
    </section>

    <!-- Products List Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Product List</h2>
            <div id="productList" class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@Url.Content($"~/images/{product.ImageUrl}")" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <a href="/Product/Details/@product.Id" class="btn btn-info">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Handle search button click
            $('#searchButton').click(function () {
                var searchTerm = $('#searchTerm').val();
                $.ajax({
                    url: '@Url.Action("Search", "Product")',
                    data: { searchTerm: searchTerm },
                    type: 'GET',
                    success: function (result) {
                        $('#productList').html(result); // Update the product list container with filtered results
                    }
                });
            });

            // Optionally, handle Enter key press for search
            $('#searchTerm').keypress(function (e) {
                if (e.which === 13) {
                    $('#searchButton').click();
                }
            });
        });
    </script>
</body>

</html>
