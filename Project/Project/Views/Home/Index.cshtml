                    <a href="/User/Login" class="card-link" style="border:none">
                        <div class="card mb-4">
                            <img src="~/images/p1.jpeg" class="card-img-top" alt="Product 1">
                            <div class="card-body">
                                <h5 class="card-title">Long Coat</h5>
                                <p class="card-text">High Quality wool Coat.</p>
                            </div>
                            <div class="card-footer">
                                <small>$99.99</small>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/User/Login" class="card-link">
                        <div class="card mb-4">
                            <img src="~/images/p1.jpeg" class="card-img-top" alt="Product 1">
                            <div class="card-body">
                                <h5 class="card-title">Long Coat</h5>
                                <p class="card-text">High Quality wool Coat.</p>
                            </div>
                            <div class="card-footer">
                                <small>$99.99</small>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/User/Login" class="card-link">
                        <div class="card mb-4">
                            <img src="~/images/p1.jpeg" class="card-img-top" alt="Product 1">
                            <div class="card-body">
                                <h5 class="card-title">Long Coat</h5>
                                <p class="card-text">High Quality wool Coat.</p>
                            </div>
                            <div class="card-footer">
                                <small>$99.99</small>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Hot Picks Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Hot Picks</h2>
            <div class="row">
                <!-- Hot picks items -->
                <!-- Example item -->
                <div class="col-md-4">
                    <a href="/User/Login" class="card-link">
                        <div class="card mb-4">
                            <img src="~/images/p2.webp" class="card-img-top" alt="Product 4">
                            <div class="card-body">
                                <h5 class="card-title">Product Name</h5>
                                <p class="card-text">Brief description of the product.</p>
                            </div>
                            <div class="card-footer">
                                <small>$99.99</small>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/User/Login" class="card-link">
                        <div class="card mb-4">
                            <img src="~/images/p2.webp" class="card-img-top" alt="Product 4">
                            <div class="card-body">
                                <h5 class="card-title">Product Name</h5>
                                <p class="card-text">Brief description of the product.</p>
                            </div>
                            <div class="card-footer">
                                <small>$99.99</small>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/User/Login" class="card-link">
                        <div class="card mb-4">
                            <img src="~/images/p2.webp" class="card-img-top" alt="Product 4">
                            <div class="card-body">
                                <h5 class="card-title">Product Name</h5>
                                <p class="card-text">Brief description of the product.</p>
                            </div>
                            <div class="card-footer">
                                <small>$99.99</small>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <script>
        const images = [
            '@Url.Content("~/images/banner2.jpg")',
            '@Url.Content("~/images/banner1.jpg")',
            '@Url.Content("~/images/banner.webp")',
            '@Url.Content("~/images/banner3.jpg")',
            '@Url.Content("~/images/banner4.jpg")'
        ];
        let currentImageIndex = 0;
        const bannerImage = document.getElementById('bannerImage');

        function changeImage() {
            currentImageIndex = (currentImageIndex + 1) % images.length;
            bannerImage.src = images[currentImageIndex];
        }

        setInterval(changeImage, 1500); // Change image every 2 seconds
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
